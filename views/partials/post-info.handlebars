<a href="/post/{{id}}">
    <article class="list-item">
        <div class="list-item-header flex-row align-center justify-space-between">
            <p class="list-item-title">{{title}}</p>
            <p class="list-item-info">Posted by {{user.username}} on
            {{format_date created_at}}</p>
        </div>
        <div class="content">
            <br />
            <p>{{content}}</p>
            <br />
            {{comments.length}} {{format_plural 'comment' comments.length}}
        </div>
    </article>
</a>