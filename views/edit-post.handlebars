<section class="list-item">
    <div class="list-item-header">
        <p class="list-item-title">Edit Post</p>
    </div>

    <form class="edit-post-form">
        <div class="content">
            <label for="post-title">Title</label>
            <br />
            <textarea id="post-title" name="post-title">
                {{post.title}}
            </textarea>
        </div>
        <div class="content">
            <label for="post-content">Content</label>
            <br />
            <textarea id="post-content" name="post-content">
                {{post.content}}
            </textarea>
        </div>
        <button id="update-btn" type="submit" class="btn">Update Post</button>
        <button id="delete-btn" type="click" class="btn">Delete Post</button>
    </form>
</section>

<script src='/javascript/edit-post.js'></script>