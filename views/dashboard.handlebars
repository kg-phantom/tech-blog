{{#if posts.length}}
<section>
    <h2>Your Posts</h2>
    {{#each posts as |post|}}
    <div>
        {{> post-info post}}
        <a href='/dashboard/edit/{{post.id}}' class='edit-link'>Edit post</a>
    </div>
    {{/each}}
</section>
{{/if}}
<button id="new-post-btn" class="btn"><i class="fas fa-plus"></i> New Post</button>

<script src="/javascript/dashboard.js"></script>